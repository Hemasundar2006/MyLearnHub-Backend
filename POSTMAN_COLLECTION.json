{
  "info": {
    "name": "MyLearnHub Backend API",
    "description": "Complete API collection for MyLearnHub Backend with Admin Authentication and Course Management",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "admin_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "User Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get User Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        },
        {
          "name": "Update User Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{jwt_token}}"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"John Smith\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Public Courses",
      "item": [
        {
          "name": "Get All Courses",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/courses",
              "host": ["{{base_url}}"],
              "path": ["courses"]
            }
          }
        },
        {
          "name": "Get Course by ID",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/courses/:id",
              "host": ["{{base_url}}"],
              "path": ["courses", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Authentication",
      "item": [
        {
          "name": "Admin Login",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@mylearnhub.com\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/auth/login",
              "host": ["{{base_url}}"],
              "path": ["admin", "auth", "login"]
            }
          }
        },
        {
          "name": "Get Admin Profile",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/admin/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["admin", "auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Course Management",
      "item": [
        {
          "name": "Get All Courses (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/admin/courses",
              "host": ["{{base_url}}"],
              "path": ["admin", "courses"]
            }
          }
        },
        {
          "name": "Get Courses by Status",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/admin/courses?status=draft",
              "host": ["{{base_url}}"],
              "path": ["admin", "courses"],
              "query": [
                {
                  "key": "status",
                  "value": "draft"
                }
              ]
            }
          }
        },
        {
          "name": "Create Course",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Course Title\",\n  \"description\": \"Detailed description of the course...\",\n  \"instructor\": \"Jane Doe\",\n  \"duration\": \"4 weeks\",\n  \"price\": 3000,\n  \"image\": \"https://images.unsplash.com/photo-1516321318423-f06f85e504b3?w=800\",\n  \"status\": \"published\",\n  \"category\": \"Web Development\",\n  \"level\": \"beginner\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/courses",
              "host": ["{{base_url}}"],
              "path": ["admin", "courses"]
            }
          }
        },
        {
          "name": "Get Course by ID (Admin)",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}"
                }
              ]
            },
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/admin/courses/:id",
              "host": ["{{base_url}}"],
              "path": ["admin", "courses", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Update Course",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Course Title\",\n  \"price\": 3500,\n  \"status\": \"published\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/admin/courses/:id",
              "host": ["{{base_url}}"],
              "path": ["admin", "courses", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        },
        {
          "name": "Delete Course",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{admin_token}}"
                }
              ]
            },
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/admin/courses/:id",
              "host": ["{{base_url}}"],
              "path": ["admin", "courses", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": ""
                }
              ]
            }
          }
        }
      ]
    }
  ]
}

